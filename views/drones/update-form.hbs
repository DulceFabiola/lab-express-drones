<div class="container">
  <h2>Update the drone</h2>
  <form action="/drones/{{data._id}}/edit" method="POST">
    <label>Name</label>
    <input type="text" name="name" value="{{data.name}}" />
    <br />

    <label>propellers</label>
    <input type="text" name="propellers" value="{{data.propellers}}" />

    <br />

    <label>maxSpeed</label>
    <input type="number" name="maxSpeed" value="{{data.maxSpeed}}" />

    <br />

    <label>Image</label>
    <input type="text" name="image" value="{{data.image}}" />

    <br />

    <button type="submit">Save drone</button>

  </form>
</div>